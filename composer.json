{
    "name": "giuseppenuc/uptimerobot-bundle",
    "description": "Uptime Robot SF4 Bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Giuseppe Nucifora",
            "email": "me@giuseppenucifora.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": ">=7.1",
        "symfony/framework-bundle": ">=4.3",
        "symfony/flex": "^1.2",
        "symfony/dependency-injection": "^v4.4",
        "symfony/config": "^4.4",
        "symfony/serializer": "^4.4",
        "ext-json": "*",
        "geocodio/uptimerobot-api-client": "^1.2"
    },
    "require-dev": {
        "roave/security-advisories": "dev-master"
    },
    "autoload": {
        "psr-4": {
            "Pn\\UptimeRobotBundle\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/flex": true
        }
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        }
    }
}
